<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" version="3.2.0" method="upgrade">

    <name>PLG_SYSTEM_ASSETS</name>
    <author>Andy Kirk</author>
    <authorEmail>andy.kirk@npeu.ox.ac.uk</authorEmail>
    <authorUrl>https://www.npeu.ox.ac.uk</authorUrl>
    <creationDate>March 2020</creationDate>
    <copyright>(C) NPEU 2020</copyright>
    <license>MIT License; see LICENSE.md</license>

    <!--  The version string is recorded in the components table -->
    <version>1.0.0</version>
    <!-- The description is optional and defaults to the name -->
    <description>PLG_SYSTEM_ASSETS_XML_DESCRIPTION</description>
    
    <scriptfile>assets.script.php</scriptfile>

    <updateservers>
        <!-- Note: No spaces or linebreaks allowed between the server tags -->
        <server type="extension" name="NPEU: plg_assets Update Site">https://raw.githubusercontent.com/NPEU/plg_assets/master/update-manifest.xml</server>
    </updateservers>
    
    <files>
        <filename plugin="assets">assets.php</filename>
        <filename>assets.htaccess.txt</filename>
        <filename>index.html</filename>
        <folder>forms</folder>
        <folder>language</folder>
        <folder>services</folder>
    </files>

    <config>
         <fields name="params">
            <fieldset name="basic">
               <field
                  name="thumbsize"
                  type="number"
                  label="PLG_SYSTEM_ASSETS_CONFIG_THUMBSIZE_LABEL"
                  description="PLG_SYSTEM_ASSETS_CONFIG_THUMBSIZE_DESC"
                  default="1200"
               />
            </fieldset>
         </fields>
      </config>

</extension>